<!-- Modal -->
<div class="modal fade bd-example-modal-lg-devolucion modal-reset" tabindex="-1" role="dialog" id="modalClose" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <form action="{{path('devolucionTercero', {'idFromHomePage': idFromHomePage, 'idHomePage': idHomePage}) }}" method="POST">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{tipo}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"  onclick="getValueDepo()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 ">
                        <h6> N° Registro: </h6>
                        <input class="form-control mt-1 d-inline" type="text" value="{{nroRegistro[1]}}" name="Valvula[nroRegistro]" readonly>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4 ">
                        <h6> Fecha: </h6>
                        <input class="form-control mt-1 fechaActual" type="datetime-local" name="Valvula[fecha]" required>
                    </div>
                </div>
                <br>  
                <h6> De: </h6>
                <div class="row">
                    <div class="col-md-2">
                        <input class="form-control mt-1 codDeposito" type="text" name="Valvula[codDeposito]" value="{{user.codDeposito}}" readonly>
                        {# <input class="form-control mt-1 codDeposito" type="text" id="codDeposito_3" name="Valvula[codDeposito]" onfocusout="getDeposito('devolucion')" required> #}
                    </div>
                    <div class="col-md-6">
                        <input class="form-control mt-1 inputDepo" type="text" id="descripcionDepo_3"  readonly>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-2">
                        <h6> N° Partida: </h6>
                    </div>
                    <div class="col-md-4">
                        
                    </div>
                    <div class="col-md-2">
                        <h6> Cant. Inicial: </h6>
                    </div>
                    <div class="col-md-2">
                        <h6> Saldos: </h6>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <input class="form-control mt-1" type="text" value="0" name="Valvula[codDesvio]" id="codDesvio_3" required>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control mt-1" type="text" name="Valvula[nroPartida]" id="nroPartida_3" onfocusout="getValvula('devolucion')" required>
                    </div>
                    <div class="col-md-2">
                        <input class="form-control mt-1 cantidadInicial" value="" type="text" readonly>
                    </div>
                    <div class="col-md-2">
                        <input class="form-control mt-1 cantidad" value="" type="text" readonly>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4 ">
                        <h6> Válvula: </h6>
                        <input class="form-control mt-1" type="text" name="Valvula[valvula]" id="valvula_3" readonly>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <h6> Cantidad: </h6>
                        <input class="form-control mt-1 cantidad" type="number" name="Valvula[cantidad]" min="1" max="99999" required>
                    </div>
                    
                    <div class="col-md-4 text-center">
                        <h6> P.T.T Terminada </h6>
                        <input class="mt-2" type="checkbox"name="Valvula[ppt]" >
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-5 text-center">
                        <h6> Sin terminado de punta (Op. 180): </h6>
                        <input class="sinTerminadoPunta" type="checkbox"name="Valvula[sinPunta]" >
                    </div>
                    <div class="col-md-6 text-center">
                        <h6> Válvulas para retrabajar </h6>
                        <input class="" type="checkbox" id="check_devolucion" onclick="checkRetrabajar('devolucion')" name="Valvula[retrabajar]" >
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <h6> Observaciones: </h6>
                        <textarea class="form-control" name="Valvula[observaciones]" cols="1" rows="2"></textarea>
                        {# <input class="form-control mt-1" type="text" name="Valvula[observaciones]"> #}
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <h6> Tipo: </h6>
                        <input class="form-control mt-1" type="text" value="{{tipo}}" name="Valvula[tipo]" readonly>
                    </div>
                </div>
                <br>
                <h6> A: </h6>
                <div class="row">
                    <div class="col-md-2">
                        {# <input class="form-control mt-1" type="text" name="Valvula[codProveedor]" id="codProveedor_3" onfocusout="getProveedor('devolucion')" value="" required> #}
                        <input class="form-control mt-1" type="text" name="Valvula[codProveedor]" value="674" readonly>
                    </div>
                    <div class="col-md-6">
                        {# <input class="form-control mt-1" id="descripcionProv_3" type="text" readonly> #}
                        <input class="form-control mt-1" type="text" value="MOTOR PARTS S.A." readonly>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-md-12">
                        <h6> Para: </h6>
                        <input class="form-control mt-1 para" type="text"  name="Valvula[para]" value=""  readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="buttonDevolucion" disabled>Guardar</button>
            </div>
        </div>
        
    </div>  
    </form>
</div>